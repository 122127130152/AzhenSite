
<div class="col-md-6 text-left">
  <h1>技术文章</h1>
</div>
<div class="col-md-6 text-right">
  <%= link_to '新建', new_admin_article_url, class:"btn btn-primary right" %>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布时间</th>
      <th>内容</th>
      <th>发布状态</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title%></td>
      <td><%= article.publish_time.to_s(:db) if article.publish_time %></td>
      <td><%= article.content %></td>
      <td><%= articles_status(article.status) %></td>
      <td><%= link_to '显示', admin_article_path(article), class:"btn btn-primary" %></td>
      <td><%= link_to '编辑', edit_admin_article_path(article), class:"btn btn-primary" %></td>
      <td><%= link_to '删除', admin_article_path(article), method: :delete, data: {confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>