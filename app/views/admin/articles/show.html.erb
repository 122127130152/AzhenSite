<table class="table table-striped table-bordered">
  <tr>
    <th><strong>标题：</strong></th>
    <th><%= @article.title %></th>
  </tr>
  <tr>
    <th><strong>内容:</strong></th>
    <th><%= @article.content %></th>
  </tr>
  <tr>
    <th><strong>发布时间：</strong></th>
    <th><%= @article.publish_time %></th>
  </tr>
  <tr>
    <th><strong>发布状态：</strong></th>
    <th><%= articles_status(@article.status) %></th>
  </tr>
</table>


<%= link_to '编辑', edit_admin_article_path(@article), class:"btn btn-primary"%>
<%= link_to '返回', admin_articles_url, class:"btn btn-primary" %>