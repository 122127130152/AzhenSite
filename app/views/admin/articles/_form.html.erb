<%= form_with(model: ['admin',@article], local: true, class: "form-horizontal") do |form| %>
    <div class="form-group">
      <%= form.label :title,"标题", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title, id: :article_title, class: "form-control", placeholder: "标题"%>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :content,"内容", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= kindeditor_tag 'article[content]', @article.content %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :publish_time,"发布时间", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.datetime_select :publish_time, id: :article_publish_time, class: "form-control", placeholder: "Publish_time"%>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :status,"发布状态", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.select :status, [["未发布", 1],["已发布", 2],["关闭", 3]], class:"form-control", placeholder:"显示状态"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "提交", class: "btn btn-primary" %> 
      </div>
    </div>
<% end %>